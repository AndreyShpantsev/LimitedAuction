@using DataAccessLogic.DatabaseModels

@model

@{ ViewData["Title"] = "Список заявок"; }

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 my-lg-2">
    @foreach (//Application app in Model)
    {
    <div class="col">
        <div class="card h-100 rounded-0">
            <a><img src="@app.AuctionLot.PhotoSrc" class="card-img-top list-lot rounded-0" alt="..."></a>
            <div class="card-body">
                <a class="auction-link" asp-action="OpenLot" asp-controller="User" asp-route-id="@app.AuctionLot.Id">
                    <h5 class="card-title">@app.AuctionLot.Name</h5>
                </a>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><b>Конец подачи заявок: </b>@app.AuctionLot.AppEndDate.ToShortDateString()</li>
                <li class="list-group-item"><b>Начало торгов: </b>@app.AuctionLot.StartDate.ToShortDateString()</li>
                <li class="list-group-item"><b>Стартовая цена: </b>@app.AuctionLot.PriceInfo.StartPrice руб.</li>
                }
            </ul>
        </div>
    </div>
    }
</div>